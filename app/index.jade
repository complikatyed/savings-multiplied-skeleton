doctype html
html(lang="en-US")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Savings Multiplied
    link(rel="stylesheet" href="/vendor/skeleton/css/skeleton.css")
    link(rel="stylesheet" href="/vendor/skeleton/css/normalize.css")
    link(rel="stylesheet" href="css/main.css")
    link(href="http://fonts.googleapis.com/css?family=Corben:bold" rel="stylesheet" type="text/css")


  body
    
    // START PAGE


    // HEADING


    // * Top of Page *
    .header.u-full-width 
      .header-content
        .header-signin
          // * Top right sign in and sign up links *
          ul.u-pull-right
            li sign in
            li sign up
        // * Start white body background color. *
        .header-main
          .row
            // * Main logo taking up five columns on top left of Page. *
            .five.columns.header-logo
              img(src="img/savings-multiplied-logo.png")
            // * Next seven columns containing colored button ul and paragraph with tagline. Note that these collapse under the logo with responsiveness. *
            .seven.columns.header-list 
              ul
                li 
                  button.button-primary.green About
                li 
                  button.button-primary.teal Contact
                li 
                  button.button-primary.purple Blog
                li 
                  button.button-primary.pink Press
                
                img(src="img/tagline.png")

    // * Pink nav bar with ul items. Note this div also spans the entire 12 columns under .header.u-full-width. *
    // * Break in white background to span nav bar with pink.
    .nav-container
      ul
        li Buy
        li Sell
        li How it Works
        li Links
        li Community
        // * Search input *
        li 
          input(type="text" placeholder="search")

    // - MAIN BODY


    // * Page's main content starts here. *
    // * Resume white background in content with background-color. *
    .content-container
      // * Starting a new row to split columns within .u-full-width. *
      .row
        // * 7 columns containing 2 paragraphs, 'shop_now' image, 'tree' image, and owl image on left. Note this will scale tos tack with responsiveness. Certain elements may also dissapear with scaling and responsive coding. *
        .seven.columns.left-container
          h5.content-header We're making one aspect of life easier for parents of multiples:
          .owl-content-container
            img.content-owl(src="img/owl_light_blue_32.png")
            p buying and selling gently used sets of clothes!
          a(href="search.html")
            img.u-pull-right.shop-now(src="img/shop_now.png")
          img.u-pull-right.tree(src="img/tree.png")
        // * 5 columns to the right of the 7 displaying only baby images. Will also scale with responsiveness and disappear with a mobile size. 
        .five.columns
          .baby-images 
              img(src="img/twins.jpg")
              img(src="img/triplets.jpg")
              img(src="img/quads.jpg")

      // * Container holding only dot image spanning whole page. *
      .dot-container

      
      // - SUB FOOTER IMAGES


      // * Page footer below dots. Contains exclusively images that will scale with responsiveness. *
      .footer-container
        ul
          li
            img(src="img/facebook_footer.png")
          li
            img(src="img/twitter_footer.png")
          li
            img(src="img/message_board_footer.png")
          li
            img(src="img/special_offers_footer.png")
    // * End white content background. *

    
    // FOOTER WITH LINKS 


    // * Footer below white space containing links. *
    .link-footer
      ul
        li Link Here
        li Link Here
        li Link Here
        li Link Here
        li Link Here
        li Link Here


    // END PAGE



    script(src="js/main.js")
